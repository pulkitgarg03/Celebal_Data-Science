#Lower Triangular Pattern:
n = 5
for i in range(n):
    for j in range(i+1):
        print("*", end=" ")
    print()


#Upper Triangular Pattern:
n = 5
for i in range(n):
    for j in range(n-i):
        print(" ", end=" ")
    for k in range(i+1):
        print("*", end=" ")
    print()


#Pyramid Pattern:
n = 5
for i in range(n):
    for j in range(n-i-1):
        print(" ", end=" ")
    for k in range(2*i+1):
        print("*", end=" ")
    print()
